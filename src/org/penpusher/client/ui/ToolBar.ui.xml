<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style type='org.penpusher.client.ui.ToolBar.ToolBarStyle'>
		.toolbar {
			vertical-align: middle;
		}
		
		.title {
			margin-left:10px;
			width:400px;
			vertical-align:middle;
			position: absolute;
		}
		
		.links {
			margin-right: 20px;
			text-align: right;
    	}
		
		.link {
			text-decoration: none;
			padding-left: 5px;
			padding-right: 5px;
			border-left: 1px solid #ccc;
		}
		
		.lastlink {
			text-decoration: none;
			padding-left: 5px;
			padding-right: 5px;
			border-left: 1px solid #ccc;
			border-right: 1px solid #ccc;
		}
	</ui:style>

	<g:HTMLPanel ui:field="links" styleName='{style.toolbar}'>
		<div class='{style.title}'>
			<g:Label ui:field="title"/>
		</div>
		<div id='links' class='{style.links}'/>
	</g:HTMLPanel>

</ui:UiBinder>
